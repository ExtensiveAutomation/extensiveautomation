[Unit]
Description=Extensive Automation Service
After=network.target

[Service]
Type=forking
ExecStart=/opt/extensiveautomation/extensiveautomation --start
ExecStop=/opt/extensiveautomation/extensiveautomation --stop
ExecReload=/opt/extensiveautomation/extensiveautomation --reload
RemainAfterExit=yes
User=root
Group=root

[Install]
WantedBy=multi-user.target
